<div id="main-ad-image">
  <%= image_tag 'main.png', class: :active %>
  <%= image_tag 'main.png' %>
  <%= image_tag 'main.png' %>
</div>
<div id="footer-ads">
  <div class="col mini">
    <div class="mini-ad">
      <%= image_tag 'ring.png' %>
      <% taxon = Spree::Taxonomy.find_by_name('Deals').try(:taxons).try(:second) %>
      <div>
        <%= link_to taxon.try(:name), seo_url(taxon) if taxon.present? %><br/>
        <small>Oct 16th, 2013</small>
      </div>
    </div>
    <div class="mini-ad">
      <%= image_tag 'ring.png' %>
      <div>
        <% if spree_current_user %>
          <%= link_to 'Member Benefits', benefits_path %>
        <% else %>
          <%= link_to 'Become a member today!', spree_signup_path %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col">
    <%= image_tag 'ad1.png' %>
  </div>
  <div class="col">
    <%= image_tag 'ad2.png' %>
  </div>
  <div class="col">
    <%= image_tag 'ad3.png' %>
  </div>
</div>
